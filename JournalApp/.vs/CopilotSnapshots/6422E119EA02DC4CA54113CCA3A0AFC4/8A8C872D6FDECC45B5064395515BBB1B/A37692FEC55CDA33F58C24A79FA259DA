@page "/entry/{date:datetime}"
@using JournalApp.Models
@using JournalApp.Services
@inject DatabaseService DbService
@inject NavigationManager NavManager
@inject PdfService PdfService

<div class="entry-preview-container">
    @if (isLoading)
    {
        <div class="loading-state">
            <div class="loading-spinner"></div>
            <p>Loading entry...</p>
        </div>
    }
    else if (entry != null)
    {
        <div class="entry-preview-card fade-in">
            <!-- Entry Header -->
            <div class="entry-header">
                <div class="date-section">
                    <div class="date-badge">
                        <span class="date-day">@entry.Date.ToString("dd")</span>
                        <span class="date-month">@entry.Date.ToString("MMM")</span>
                        <span class="date-year">@entry.Date.ToString("yyyy")</span>
                    </div>
                    <div class="date-info">
                        <h2 class="entry-date">@entry.Date.ToString("dddd, MMMM dd, yyyy")</h2>
                        <p class="entry-time">Created at @entry.CreatedAt.ToString("h:mm tt")</p>
                    </div>
                </div>
                <div class="mood-section">
                    <div class="mood-indicator @GetMoodClass(entry.PrimaryMood)">
                        <span class="mood-emoji">@GetMoodEmoji(entry.PrimaryMood)</span>
                        <span class="mood-text">@entry.PrimaryMood</span>
                    </div>
                    @if (entry.UpdatedAt.Date != entry.CreatedAt.Date)
                    {
                        <span class="updated-badge">Updated</span>
                    }
                </div>
            </div>

            <!-- Entry Content -->
            <div class="entry-content-section">
                <h1 class="entry-title">@entry.Title</h1>
                <div class="entry-content">
                    <p>@entry.Content</p>
                </div>
            </div>

            <!-- Tags Section -->
            @if (!string.IsNullOrEmpty(entry.Tags))
            {
                <div class="tags-section">
                    <h3 class="tags-title">Tags</h3>
                    <div class="tags-container">
                        @foreach (var tag in entry.Tags.Split(',').Select(t => t.Trim()).Where(t => !string.IsNullOrEmpty(t)))
                        {
                            <span class="tag-chip">#@tag</span>
                        }
                    </div>
                </div>
            }

            <!-- Entry Actions -->
            <div class="entry-actions">
                <button class="action-btn primary" @onclick="EditEntry">
                    <span class="btn-icon">✏️</span>
                    Edit Entry
                </button>
                <button class="action-btn secondary" @onclick="ExportToPdf">
                    <span class="btn-icon">📄</span>
                    Export PDF
                </button>
                <button class="action-btn secondary" @onclick="GoToCalendar">
                    <span class="btn-icon">📅</span>
                    Back to Calendar
                </button>
                <button class="action-btn danger" @onclick="DeleteEntry">
                    <span class="btn-icon">🗑️</span>
                    Delete
                </button>
            </div>

            <!-- Entry Metadata -->
            <div class="entry-metadata">
                <div class="metadata-item">
                    <span class="metadata-label">Word Count:</span>
                    <span class="metadata-value">@wordCount words</span>
                </div>
                <div class="metadata-item">
                    <span class="metadata-label">Character Count:</span>
                    <span class="metadata-value">@characterCount characters</span>
                </div>
                <div class="metadata-item">
                    <span class="metadata-label">Reading Time:</span>
                    <span class="metadata-value">~@readingTime min read</span>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="no-entry-state">
            <div class="no-entry-icon">📝</div>
            <h2 class="no-entry-title">No Entry Found</h2>
            <p class="no-entry-description">There's no journal entry for @Date.ToString("MMMM dd, yyyy")</p>
            <div class="no-entry-actions">
                <button class="action-btn primary" @onclick="CreateEntry">
                    <span class="btn-icon">✨</span>
                    Create Entry
                </button>
                <button class="action-btn secondary" @onclick="GoToCalendar">
                    <span class="btn-icon">📅</span>
                    Back to Calendar
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public DateTime Date { get; set; }
    private JournalEntry? entry;
    private bool isLoading = true;
    private int wordCount;
    private int characterCount;
    private int readingTime;

    protected override async Task OnInitializedAsync()
    {
        await LoadEntry();
        CalculateStats();
        isLoading = false;
    }

    private async Task LoadEntry()
    {
        var entries = await DbService.GetEntriesAsync();
        entry = entries.FirstOrDefault(e => e.Date.Date == Date.Date);
    }

    private void CalculateStats()
    {
        if (entry != null)
        {
            var words = entry.Content.Split(new[] { ' ', '\t', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries);
            wordCount = words.Length;
            characterCount = entry.Content.Length;
            readingTime = Math.Max(1, (int)Math.Ceiling(wordCount / 200.0)); // Average reading speed: 200 words/min
        }
    }

    private void EditEntry()
    {
        if (entry != null)
        {
            NavManager.NavigateTo($"/edit/{entry.Id}");
        }
    }

    private async Task ExportToPdf()
    {
        if (entry != null)
        {
            try
            {
                var pdfBytes = await PdfService.GenerateEntryPdfAsync(entry);
                await SavePdfFile(pdfBytes, $"Journal_Entry_{entry.Date:yyyy-MM-dd}.txt");
            }
            catch
            {
                // Handle error - could show a message to user
                // For now, we'll just continue
            }
        }
    }

    private async Task SavePdfFile(byte[] pdfBytes, string fileName)
    {
        try
        {
            var downloadsPath = Path.Combine(Environment.GetFolderPath(Environment.SpecialFolder.UserProfile), "Downloads");
            var filePath = Path.Combine(downloadsPath, fileName);
            
            await File.WriteAllBytesAsync(filePath, pdfBytes);
            
            // Show success message to user with actual device path
            if (Application.Current?.MainPage != null)
            {
                await Application.Current.MainPage.DisplayAlert(
                    "Export Successful", 
                    $"File saved to:\n{filePath}", 
                    "OK"
                );
            }
        }
        catch
        {
            if (Application.Current?.MainPage != null)
            {
                await Application.Current.MainPage.DisplayAlert(
                    "Export Failed", 
                    "Could not save the file.", 
                    "OK"
                );
            }
        }
    }

    private void CreateEntry()
    {
        NavManager.NavigateTo($"/add?date={Date:yyyy-MM-dd}");
    }

    private void GoToCalendar()
    {
        NavManager.NavigateTo("/calendar");
    }

    private void DeleteEntry()
    {
        if (entry != null)
        {
            NavManager.NavigateTo($"/delete/{entry.Id}");
        }
    }

    private string GetMoodEmoji(string mood) => mood switch
    {
        "Happy" => "😊",
        "Excited" => "🤩",
        "Grateful" => "🙏",
        "Neutral" => "😐",
        "Sad" => "😢",
        "Stressed" => "😫",
        _ => "😐"
    };

    private string GetMoodClass(string mood) => mood switch
    {
        "Happy" => "mood-positive",
        "Excited" => "mood-positive", 
        "Grateful" => "mood-positive",
        "Neutral" => "mood-neutral",
        "Sad" => "mood-negative",
        "Stressed" => "mood-negative",
        _ => "mood-neutral"
    };
}

