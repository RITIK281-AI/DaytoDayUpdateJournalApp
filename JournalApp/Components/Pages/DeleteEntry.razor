@page "/delete/{Id:int}"
@using JournalApp.Models
@using JournalApp.Services
@inject DatabaseService DbService
@inject NavigationManager NavManager

<div class="delete-container">
    @if (isLoading)
    {
        <div class="loading-state">
            <div class="loading-spinner"></div>
            <p>Loading entry...</p>
        </div>
    }
    else if (entry != null)
    {
        <div class="delete-card fade-in">
            <div class="delete-header">
                <div class="warning-icon">‚ö†Ô∏è</div>
                <h2 class="delete-title">Delete Entry</h2>
                <p class="delete-subtitle">This action cannot be undone</p>
            </div>

            <div class="entry-preview">
                <div class="entry-info">
                    <div class="date-badge">
                        <span class="date-day">@entry.Date.ToString("dd")</span>
                        <span class="date-month">@entry.Date.ToString("MMM")</span>
                    </div>
                    <div class="entry-details">
                        <h3 class="entry-title">@entry.Title</h3>
                        <div class="entry-meta">
                            <span class="mood-indicator @GetMoodClass(entry.PrimaryMood)">
                                <span class="mood-emoji">@GetMoodEmoji(entry.PrimaryMood)</span>
                                <span class="mood-text">@entry.PrimaryMood</span>
                            </span>
                            <span class="entry-date">@entry.Date.ToString("dddd, MMMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
                <div class="entry-content">
                    <p>@entry.Content</p>
                </div>
                @if (!string.IsNullOrEmpty(entry.Tags))
                {
                    <div class="entry-tags">
                        @foreach (var tag in entry.Tags.Split(',').Select(t => t.Trim()).Where(t => !string.IsNullOrEmpty(t)))
                        {
                            <span class="tag-chip">#@tag</span>
                        }
                    </div>
                }
            </div>

            <div class="delete-warning">
                <div class="warning-content">
                    <h4>Are you sure you want to delete this entry?</h4>
                    <p>This will permanently remove:</p>
                    <ul class="warning-list">
                        <li>The journal entry and all its content</li>
                        <li>Associated tags and mood information</li>
                        <li>Any memories captured on this date</li>
                    </ul>
                </div>
            </div>

            <div class="delete-actions">
                <button class="delete-btn danger" @onclick="ConfirmDelete">
                    <span class="btn-icon">üóëÔ∏è</span>
                    Delete Entry
                </button>
                <button class="delete-btn secondary" @onclick="Cancel">
                    <span class="btn-icon">‚ùå</span>
                    Cancel
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="not-found-card">
            <div class="not-found-icon">üì≠</div>
            <h2 class="not-found-title">Entry Not Found</h2>
            <p class="not-found-description">The requested journal entry could not be found.</p>
            <button class="delete-btn primary" @onclick="GoToCalendar">
                <span class="btn-icon">üìÖ</span>
                Back to Calendar
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private JournalEntry? entry;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            entry = await DbService.GetEntryByIdAsync(Id);
        }
        catch
        {
            // Handle error gracefully
            entry = null;
        }
    }

    private async Task ConfirmDelete()
    {
        if (entry != null)
        {
            try
            {
                await DbService.DeleteEntryAsync(entry.Id);
                NavManager.NavigateTo("/calendar");
            }
            catch
            {
                // Handle delete error
                // Could show error message here
            }
        }
    }

    private void Cancel()
    {
        NavManager.NavigateTo("/calendar");
    }

    private void GoToCalendar()
    {
        NavManager.NavigateTo("/calendar");
    }

    private string GetMoodEmoji(string mood) => mood switch
    {
        "Happy" => "üòä",
        "Excited" => "ü§©",
        "Grateful" => "üôè",
        "Neutral" => "üòê",
        "Sad" => "üò¢",
        "Stressed" => "üò´",
        _ => "üòê"
    };

    private string GetMoodClass(string mood) => mood switch
    {
        "Happy" => "mood-positive",
        "Excited" => "mood-positive", 
        "Grateful" => "mood-positive",
        "Neutral" => "mood-neutral",
        "Sad" => "mood-negative",
        "Stressed" => "mood-negative",
        _ => "mood-neutral"
    };
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        min-height: 100vh;
    }

    .delete-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 8px 32px var(--shadow-color);
    }

    .delete-header {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
        text-align: center;
        padding: 2rem;
    }

    .warning-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        display: block;
    }

    .delete-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .delete-subtitle {
        font-size: 1rem;
        opacity: 0.9;
        margin: 0;
    }

    .entry-preview {
        padding: 2rem;
        border-bottom: 1px solid var(--border-color);
    }

    .entry-info {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .date-badge {
        background: var(--primary-color);
        color: white;
        padding: 1rem;
        border-radius: 1rem;
        text-align: center;
        min-width: 80px;
    }

    .date-day {
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
        display: block;
    }

    .date-month {
        font-size: 0.875rem;
        text-transform: uppercase;
        opacity: 0.9;
        display: block;
        margin-top: 0.25rem;
    }

    .entry-details {
        flex: 1;
    }

    .entry-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-color);
        margin: 0 0 0.5rem 0;
    }

    .entry-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.875rem;
    }

    .mood-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(var(--primary-color), 0.1);
        border: 1px solid var(--primary-color);
        border-radius: 2rem;
        color: var(--primary-color);
        font-weight: 500;
    }

    .mood-emoji {
        font-size: 1.2rem;
    }

    .entry-date {
        color: var(--muted-text);
    }

    .entry-content {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
        white-space: pre-wrap;
    }

    .entry-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag-chip {
        background: var(--primary-light);
        color: var(--primary-color);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        border: 1px solid var(--primary-color);
    }

    .delete-warning {
        padding: 2rem;
        background: rgba(239, 68, 68, 0.05);
        border-left: 4px solid var(--danger-color);
        margin: 0 2rem;
    }

    .warning-content h4 {
        color: var(--danger-color);
        font-size: 1.1rem;
        margin: 0 0 0.5rem 0;
    }

    .warning-content p {
        color: var(--text-color);
        margin: 0 0 1rem 0;
    }

    .warning-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .warning-list li {
        color: var(--text-color);
        padding: 0.25rem 0;
        padding-left: 1.5rem;
        position: relative;
    }

    .warning-list li::before {
        content: "‚Ä¢";
        position: absolute;
        left: 0;
        color: var(--danger-color);
        font-weight: bold;
    }

    .delete-actions {
        display: flex;
        gap: 1rem;
        padding: 2rem;
        justify-content: center;
    }

    .delete-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        border: none;
        border-radius: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 1rem;
    }

    .delete-btn.danger {
        background: var(--danger-color);
        color: white;
    }

    .delete-btn.danger:hover {
        background: #dc2626;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(239, 68, 68, 0.3);
    }

    .delete-btn.secondary {
        background: var(--secondary-color);
        color: white;
    }

    .delete-btn.secondary:hover {
        background: #475569;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .delete-btn.primary {
        background: var(--primary-color);
        color: white;
    }

    .delete-btn.primary:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
    }

    /* Loading State */
    .loading-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 50vh;
        color: var(--text-color);
    }

    .loading-spinner {
        width: 40px;
        height: 40px;
        border: 4px solid var(--border-color);
        border-top: 4px solid var(--primary-color);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 1rem;
    }

    /* Not Found State */
    .not-found-card {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--card-bg);
        border: 2px dashed var(--border-color);
        border-radius: 1.5rem;
        margin: 2rem 0;
    }

    .not-found-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        display: block;
    }

    .not-found-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-color);
        margin-bottom: 1rem;
    }

    .not-found-description {
        color: var(--muted-text);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Dark Mode Enhancements */
    .dark-mode .tag-chip {
        background: rgba(99, 102, 241, 0.2);
        color: #818cf8;
        border-color: #818cf8;
    }

    .dark-mode .mood-indicator {
        background: rgba(99, 102, 241, 0.2);
        border-color: #818cf8;
        color: #818cf8;
    }

    .dark-mode .delete-warning {
        background: rgba(239, 68, 68, 0.1);
    }

    .dark-mode .not-found-card {
        background: var(--card-bg);
        border-color: var(--border-color);
    }
</style>
